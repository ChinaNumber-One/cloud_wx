/* miniprogram/pages/map/index.wxss */
page {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.map-container {
  flex:1;
  width: 100%;
}
#map {
  width: 100%;
  height: 100%;
  position: relative;
}
.tabBox {
  width: 90%;
  height: 458rpx;
  margin: 10px auto;
  border-right: 1px solid #eee;
  border-left: 1px solid #eee;
  border-bottom: 1px solid #eee;
  border-radius: 5px;
  box-shadow: 0px 0px 15px 3px #ccc;
  box-sizing: border-box;
  padding: 0 0px 14px;
  background: #fff;
}
.bar {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}
.sendBar, .buyBar {
  line-height: 48rpx;
  margin: 10rpx 40rpx;
  padding-bottom: 12rpx;
  box-sizing: border-box;
  height: 60rpx;
  font-size: 36rpx;
}
.activeBar {
  border-bottom: 6rpx solid #ffbf1c;
}

.inputBox {
  margin-bottom: 24rpx;
  border-bottom: 1px solid #eee;
  min-height: 106rpx;
}
.inputBox, .sendThingskinds {
  /* position: relative; */
  padding:0 20rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.input {
  
  padding: 10rpx 0;
  font-size: 32rpx;
  flex: 1;
  color: #666;
}
.sendThingskinds{
  font-size: 28rpx;
  color: #666;
  height: 68rpx;
  line-height: 68rpx;
}
.icon-you {
  height: 68rpx;
  line-height: 68rpx;
  font-weight: bold;
  text-align: center;
}
.sendThingskindsText {
  flex: 1;
}
.addresseeBookBtn {
  font-size: 28rpx;
  color: 	#1E90FF;
}
.flex {
  display: flex;
}
.wordwarp {
  max-width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.warnColor {
  color: red;
}
.locationIcon {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  width: 30px;
  height: 30px;
}
.buyThings {
  line-height: 100px;
  text-align: center;
}
.runers {
  position: relative;
  width: 140px;
  height: 24px;
  font-size: 12px;
  color: #fff;
  background: rgba(0, 0, 0, 0.8);
  margin: 60px auto;
  line-height: 24px;
  border-radius: 14px;
  text-align: center;
  padding: 0 20rpx;
}

