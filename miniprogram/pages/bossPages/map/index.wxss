/* miniprogram/pages/map/index.wxss */
page {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.map-container {
  flex:1;
  width: 100%;
}
#map {
  width: 100%;
  height: 100%;
}
.tabBox {
  width: 90%;
  height: 400rpx;
  margin: 10px auto;
  border-right: 1px solid #eee;
  border-left: 1px solid #eee;
  border-bottom: 1px solid #eee;
  border-radius: 5px;
  box-shadow: 0px 0px 15px 3px #ccc;
  box-sizing: border-box;
  padding: 0 0px 14px;
}
.bar {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}
.sendBar, .buyBar {
  line-height: 24px;
  margin: 5px 20px;
  padding-bottom: 6px;
  box-sizing: border-box;
  height: 30px;
}
.activeBar {
  border-bottom: 3px solid #ffbf1c;
}
.input {
  border-bottom: 1px solid #eee;
  padding: 5px 0;
  font-size: 16px;
  flex: 1;
  color: #666;
}
.inputBox {
  margin-bottom: 12px;
}
.inputBox, .sendThingskinds {
  position: relative;
  padding:0 20px;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dot {
  position: absolute;
  width: 6px;
  height: 6px;
  border-radius: 50%;
  left: 7px;
  top: 15px;
}
.sendThingskinds{
  font-size: 14px;
  color: #666;
  height: 34px;
  line-height: 34px;
}
.icon-you {
  height: 34px;
  line-height: 34px;
  font-weight: bold;
  /* margin-right: 10px; */
  /* width: 30px; */
  text-align: center;
}
.sendThingskindsText {
  flex: 1;
}